{
  "version": 1.1,
  "atDirectives": [
    {
      "name": "@theme",
      "description": "Define theme tokens for Tailwind CSS v4",
      "references": [
        {
          "name": "Tailwind CSS v4 Theme",
          "url": "https://tailwindcss.com/docs/theme"
        }
      ]
    },
    {
      "name": "@apply",
      "description": "Apply utility classes inline",
      "references": [
        {
          "name": "Tailwind CSS Apply",
          "url": "https://tailwindcss.com/docs/functions-and-directives#apply"
        }
      ]
    },
    {
      "name": "@layer",
      "description": "Define custom styles in Tailwind layers",
      "references": [
        {
          "name": "Tailwind CSS Layer",
          "url": "https://tailwindcss.com/docs/functions-and-directives#layer"
        }
      ]
    },
    {
      "name": "@custom-variant",
      "description": "Define custom variants for Tailwind CSS v4",
      "references": [
        {
          "name": "Tailwind CSS v4 Variants",
          "url": "https://tailwindcss.com/docs/hover-focus-and-other-states#custom-variants"
        }
      ]
    },
    {
      "name": "@config",
      "description": "Inline Tailwind configuration",
      "references": [
        {
          "name": "Tailwind CSS Config",
          "url": "https://tailwindcss.com/docs/functions-and-directives#config"
        }
      ]
    }
  ]
}
